<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/pin_entry_title"
            android:text="@string/enter_your_pin"
            android:textSize="@dimen/t_xxh_18"
            android:textColor="@color/txt_primary_grey"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/pin_entry_title"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="6"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/view_pin_entry"
            tools:itemCount="6"
            android:id="@+id/pin_entry_container" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/xxhdpi_20"
            android:layout_above="@id/product_linear"
            android:layout_below="@id/pin_entry_container"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:background="#f2f3f7"
            android:layout_marginBottom="@dimen/xxhdpi_20"
            android:weightSum="4.75">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_0"
                android:layout_marginLeft="@dimen/xxhdpi_20"
                android:layout_marginRight="@dimen/xxhdpi_20"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    tools:ignore="NestedWeights">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/one_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/t_xxh_26" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/two_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/t_xxh_26" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/three_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/t_xxh_26" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_0"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/xxhdpi_20"
                android:layout_marginRight="@dimen/xxhdpi_20"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/four_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/five_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/six_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_0"
                android:layout_marginLeft="@dimen/xxhdpi_20"
                android:layout_marginRight="@dimen/xxhdpi_20"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/seven_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/eight_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/nine_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_0"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/xxhdpi_20"
                android:layout_marginRight="@dimen/xxhdpi_20"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/clear_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="C"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/zero_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"
                    android:layout_marginBottom="@dimen/xxhdpi_5"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/xxhdpi_10"
                        android:maxHeight="@dimen/xxhdpi_50"
                        android:maxWidth="@dimen/xxhdpi_50"
                        android:minHeight="@dimen/xxhdpi_40"
                        android:minWidth="@dimen/xxhdpi_40"
                        android:layout_centerInParent="true"
                        android:contentDescription="TODO"
                        android:src="@drawable/backspace" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/delete_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/t_xxh_26" />

                </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_1"
                android:background="@color/light_grey" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/product_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/t_xxh_16"
            android:layout_marginLeft="@dimen/xxhdpi_20"
            android:layout_marginRight="@dimen/xxhdpi_20"
            android:background="@drawable/home_prod_bg"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton android:id="@+id/continuePayment"
                android:layout_width="match_parent"
                android:background="@drawable/rect_bor_blue"
                android:text="@string/btn_continue"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/xxhdpi_20"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</layout>